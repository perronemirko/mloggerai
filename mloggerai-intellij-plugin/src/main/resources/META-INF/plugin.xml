<idea-plugin>
    <id>com.mloggerai.plugin</id>
    <name>MLoggerAI</name>
    <vendor email="bluethrushlinux@gmail.com" url="https://github.com/perronemirko/mloggerai">Mirko Perrone</vendor>

    <description><![CDATA[
    Intercepts Run Configuration logs and proposes AI-driven solutions to help you debug faster.
    
    <h3>Features</h3>
    <ul>
        <li>Automatic error detection from console logs</li>
        <li>AI-powered solution suggestions</li>
        <li>Support for on-premise and cloud LLM providers</li>
    </ul>
    
    <h3>License</h3>
    <p>
        This plugin is <b>free for non-commercial use</b> (personal, educational, research).<br/>
        Commercial use requires a separate license.<br/>
        Contact: <a href="mailto:bluethrushlinux@gmail.com">bluethrushlinux@gmail.com</a>
    </p>
    ]]></description>

    <change-notes><![CDATA[
    <h3>0.0.1</h3>
    <ul>
        <li>Initial release</li>
        <li>Error detection from run configurations</li>
        <li>AI-driven solution suggestions</li>
    </ul>
    ]]></change-notes>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool Window -->
        <toolWindow
                id="ErrorSolver"
                anchor="right"
                factoryClass="com.mloggerai.ErrorSolverToolWindowFactory"/>

        <!-- Settings Service (Application Level) -->
        <applicationService
                serviceImplementation="com.mloggerai.plugin.MLoggerAISettings"/>

        <!-- Settings UI (Application Level) -->
        <applicationConfigurable
                instance="com.mloggerai.plugin.MLoggerAISettingsConfigurable"
                id="com.mloggerai.plugin.settings"
                displayName="MLoggerAI"/>
    </extensions>

    <!-- Uncomment when ready to use
    <actions>
        <action id="MLoggerAISuggest"
                class="com.mloggerai.plugin.MLoggerAISuggestAction"
                text="Suggest with AI"
                description="Suggests code using on-premise or cloud LLM">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt M"/>
        </action>
    </actions>
    -->
</idea-plugin>